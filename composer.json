{
    "name": "ecourty/sitemap-bundle",
    "description": "Symfony bundle for generating XML sitemaps with support for static routes, dynamic entities, and sitemap index",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Edouard Courty",
            "email": "edouard.courty2@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-xmlwriter": "*",
        "symfony/config": "^6.4|^7.0|^8.0",
        "symfony/dependency-injection": "^6.4|^7.0|^8.0",
        "symfony/http-kernel": "^6.4|^7.0|^8.0",
        "symfony/console": "^6.4|^7.0|^8.0",
        "symfony/routing": "^6.4|^7.0|^8.0",
        "symfony/property-access": "^6.4|^7.0|^8.0",
        "doctrine/orm": "^3.0|^4.0",
        "doctrine/doctrine-bundle": "^2.18|^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/framework-bundle": "^6.4|^7.0|^8.0",
        "symfony/phpunit-bridge": "^6.4|^7.0|^8.0",
        "symfony/dotenv": "^6.4|^7.0|^8.0",
        "symfony/yaml": "^6.4|^7.0|^8.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "phpstan/phpstan-doctrine": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "Ecourty\\SitemapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ecourty\\SitemapBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "qa": [
            "@phpstan",
            "@cs-check",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
